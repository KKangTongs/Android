<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/rounding_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/roomItem_roomNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/roomItem_buildingName_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/roomItem_buildingName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Building"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/roomItem_roomNumber_tv"
        app:layout_constraintTop_toTopOf="@id/roomItem_roomNumber_tv"
        app:layout_constraintBottom_toBottomOf="@id/roomItem_roomNumber_tv"
        android:layout_marginStart="20dp"/>

    <View
        android:id="@+id/rootItem_bar_vw"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/blue_violet"
        app:layout_constraintStart_toEndOf="@id/roomItem_roomNumber_tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/roomItem_remainTime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remain Time"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/rootItem_bar_vw"
        app:layout_constraintBottom_toBottomOf="@id/rootItem_bar_vw"
        app:layout_constraintStart_toEndOf="@id/rootItem_bar_vw"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>