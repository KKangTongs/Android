<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tabText">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- [마이페이지 관련 스타일들] -->
    <!-- (1) 섹터 테두리 : 둥근 스타일 -->
    <style name="myPageSectorBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">@drawable/mypage_sectors</item>
    </style>
    <!-- (2) 섹터 타이틀 스타일 (ex: "홈 화면 설정") -->
    <style name="myPageSectorTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- (3) 섹터 안에 들어가는 버튼 스타일 (ex: "즐겨찾기 등록/해제") -->
    <style name="myPageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/button_transparent_ripple</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>